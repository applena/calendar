<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head')%>
</head>

<body>
    <header>
        <%- include('../partials/header') %>
    </header>
    <main id="viewbox">
        <form id="save-form" action="/day/<%=renderData.year%>/<%=renderData.month%>/<%=renderData.day%>/<%=renderData.id%>/update" method="POST">
            <fieldset>
                <input type="text" name="name" value="<%=renderData.name%>">
                <input type="text" name="type" value="<%=renderData.type%>">
                <textarea type="text" name="description" placeholder="<%=renderData.description%>" cols="30" rows="10"></textarea>


                <input type="submit" value="Save Changes">

            </fieldset>
        </form>

        <form id="delete-form" action="/day/<%=renderData.year%>/<%=renderData.month%>/<%=renderData.day%>/<%=renderData.id%>/delete" method="POST">
            <fieldset>
              <input type="hidden" name="id" value="<%= renderData.id %>" > 
              <input type="hidden" name="_method" value="DELETE">
              <button>
                    Delete Holiday
              </button>         
            </fieldset>
    
          </form>

    </main>
    <footer>
        <%- include('../partials/footer') %>
    </footer>
</body>

</html>